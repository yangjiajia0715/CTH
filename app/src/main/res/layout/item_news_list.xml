<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:minHeight="89dp"
    android:background="@color/white">
<!--@drawable/bg_list_item-->
    <ImageView
        android:id="@+id/iv_new_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default" />

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/iv_new_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="v家的初音"
        android:textColor="@color/text_color_4a4a4a"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_title"
        android:layout_alignParentBottom="true"
        android:paddingBottom="17dp"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/iv_new_icon"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_like_no_selected" />

        <TextView
            android:id="@+id/tv_news_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="222次"
            android:textColor="@color/color_9b9b9b"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="2017-5-10"
            android:textColor="@color/color_9b9b9b"
            android:textSize="11dp" />
    </LinearLayout>

</RelativeLayout>