<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="40dp"    android:background="@color/color_e7e7e7"    android:minHeight="40dp"    android:paddingBottom="0.5dp">    <!-- android:drawableLeft="@drawable/gray_dot"-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@color/white"        android:minHeight="39.5dp"        android:paddingLeft="13dp"        android:paddingRight="13dp">        <TextView            android:id="@+id/home_page_part_left"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_centerVertical="true"            android:drawablePadding="5dp"            android:gravity="center_vertical"            android:textColor="@color/text_color_4a4a4a"            android:textSize="15dp"            tools:text="学神攻略" />        <TextView            android:id="@+id/home_page_part_right"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:drawablePadding="10dp"            android:drawableRight="@drawable/arrow_right"            android:gravity="center_vertical"            android:paddingLeft="13dp"            android:paddingRight="13dp"            android:text="全部"            android:textColor="@color/text_color_4a4a4a"            android:textSize="11dp" />    </RelativeLayout></RelativeLayout>