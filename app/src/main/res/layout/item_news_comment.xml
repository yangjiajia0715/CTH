<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp">

        <android.support.v4.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            tools:src="@drawable/default_header" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/tv_like"
            android:layout_toRightOf="@+id/iv_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="v家的初音"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginTop="@dimen/margin_6"
            android:text="用户评论"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12"
            tools:text="几分钟以前" />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_below="@+id/tv_comment_time"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="@dimen/margin_10"
            android:text="用户评论"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_14"
            tools:text="用户评论用户评论用户评论用户评论用户评论用户评论用户评论用户评论用户评论用户评论用户评论用户评论用户评论" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/comment_like_normal"
            android:drawablePadding="6dp"
            android:text="11"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:background="@color/list_view_divider_bg" />

</LinearLayout>