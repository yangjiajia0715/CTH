<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_or_anser_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/topic_or_anser_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        tools:src="@drawable/ic_biology" />

    <TextView
        android:id="@+id/topic_or_anser_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/topic_or_anser_icon"
        android:layout_toRightOf="@+id/topic_or_anser_icon"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/text_color_4a4a4a"
        android:textSize="15dp"
        tools:text="专属错题本" />

    <TextView
        android:id="@+id/topic_or_anser_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/topic_or_anser_icon"
        android:layout_below="@+id/topic_or_anser_title"
        android:layout_toRightOf="@+id/topic_or_anser_icon"
        android:textColor="@color/text_color_969696"
        android:textSize="12.5dp"
        tools:text="养成良好学习习惯" />

</RelativeLayout>