<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNaviItem" >
        <item name="android:textColor">@color/bottom_tab_text_selector</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#00123456</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light" >
        <item name="overlapAnchor" >false</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

       <!-- <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>-->
        <item name="android:dropDownVerticalOffset">20dip</item>
        <item name="android:dropDownHorizontalOffset">20dip</item>
        <item name="android:dropDownWidth">100dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">right|end|center_vertical</item>
    </style>

</resources>
